# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs
# For more information about the properties of .editorconfig files, please see http://editorconfig.org/

# Top-most EditorConfig file
root = true

# Any text file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 80

# JSON files
[*.json]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2
